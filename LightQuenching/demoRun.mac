#
# Electron, alpha and triton primary paritlces
#  100 keV  2.05 MeV   2.73 MeV
#
/control/verbose 0
/run/verbose 0
#
#
/run/initialize
/analysis/h1/set 1 100 0  5000    # Number of optical photons created
/analysis/setFileName electronOP
/gun/particle e-
/gun/energy 1 MeV
/run/beamOn 1000
#
/analysis/h1/set 1 100 0  5000    # Number of optical photons created
/analysis/setFileName alphaOP
/gun/particle alpha
/gun/energy 2.05 MeV
/run/beamOn 1000
#
/analysis/setFileName tritonOP
/analysis/h1/set 1 100 0  12000    # Number of optical photons created
/gun/particle triton
/gun/energy 2.73 MeV
/run/beamOn 1000
